{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"rootDir": "./",
		"moduleResolution": "NodeNext",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"sourceMap": true
	},
	"include": ["src/**/*.ts", "index.ts"],
	"exclude": ["node_modules"]
}
